{
    "name": "eternium-pulse/eternium-pulse",
    "description": "Eternium leaderboards and stats",
    "type": "project",
    "license": "MIT",
    "authors": [
        {
            "name": "Alex Tsarkov",
            "homepage": "https://github.com/alexey-tsarkov",
            "email": "alex.tsarkov@gmail.com"
        }
    ],
    "homepage": "https://eternium-pulse.github.io",
    "support": {
        "source": "https://github.com/eternium-pulse/eternium-pulse.github.io",
        "issues": "https://github.com/eternium-pulse/eternium-pulse.github.io/issues"
    },
    "require": {
        "php": "^8.4",
        "ext-spl": "*",
        "composer-runtime-api": "^2.2",
        "eternium-pulse/eternium": "^0.3",
        "symfony/console": "^6.4",
        "symfony/http-client": "^6.4",
        "twig/twig": "^3.22",
        "wikimedia/minify": "^2.3",
        "league/uri": "^7.7",
        "symfony/polyfill-php85": "*"
    },
    "require-dev": {
        "friendsofphp/php-cs-fixer": "^3.75",
        "phpunit/phpunit": "^11.5",
        "rector/rector": "^2.2"
    },
    "autoload": {
        "psr-4": {
            "Eternium\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Eternium\\": "tests/"
        }
    },
    "bin": [
        "bin/lb.php"
    ],
    "scripts": {
        "build": [
            "Composer\\Config::disableProcessTimeout",
            "@php -f bin/lb.php -- fetch --no-progress",
            "@php -f bin/lb.php -- generate --no-progress"
        ],
        "start": [
            "Composer\\Config::disableProcessTimeout",
            "@php -S 0.0.0.0:8080 -t public"
        ]
    },
    "scripts-descriptions": {
        "build": "Generates static content.",
        "start": "Starts dev webserver."
    },
    "extra": {
        "branch-alias": {
            "dev-master": "0.x-dev"
        }
    }
}
