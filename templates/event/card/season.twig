<div class="col">
  <div class="card bg-light bg-gradient text-center">
    <div class="card-body">
      <h5 class="card-title">Season #{{ event.index }}</h5>
      <h6 class="card-subtitle text-muted">{{ event.season|e }}</h6>
    </div>
    <div class="list-group list-group-flush">
      {%~ for e in event %}
      <a class="list-group-item list-group-item-action" href="{{ abs_url(event_path(e))|e }}">
        {{- e.getName()|e -}}
      </a>
      {%~ endfor %}
    </div>
  </div>
</div>