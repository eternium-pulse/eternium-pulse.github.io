{% extends 'layout.twig' %}

{% block title -%}
Eternium - Leaderboards on {{ site.name }}
{%- endblock %}

{% block description -%}
Leaderboards of Eternium game events
{%- endblock %}

{% block opengraph %}
<link rel="canonical" href="{{ abs_url()|e }}/"/>
<meta property="og:title" content="{{ site.name|e }}"/>
<meta property="og:url" content="{{ abs_url()|e }}/"/>
{{ parent() }}
{% endblock %}

{% block content %}
<h1>Hi, Adventurer!</h1>
<p class="lead">Here you can find Eternium leaderboards. <a rel="noreferrer" href="{{ eternium_url|e }}" target="_blank">Play Eternium</a> and watch your progress.</p>

<div class="row row-cols-1 row-cols-sm-2 row-cols-lg-3 row-cols-xl-4 g-4">
  {%~ for event in events %}
  {%~ include "event_card.twig" with {'event': event} %}
  {%~ endfor %}
</div>
{% endblock %}