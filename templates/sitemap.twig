{% apply spaceless %}
<?xml version="1.0" encoding="{{ _charset|e }}"?>
<urlset xmlns="http://www.sitemaps.org/schemas/sitemap/0.9">
{% for url in urlset %}
<url>
  <loc>{{ url|e }}</loc>
  {%~ if url.lastmod %}
  <lastmod>{{ url.lastmod|date(constant('DATE_W3C')) }}</lastmod>
  {%~ endif %}
  {%~ if url.changefreq %}
  <changefreq>{{ url.changefreq|e }}</changefreq>
  {%~ endif %}
</url>
{% endfor %}
</urlset>
{% endapply %}