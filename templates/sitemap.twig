{% apply spaceless %}
<?xml version="1.0" encoding="{{ _charset|e }}"?>
<urlset xmlns="http://www.sitemaps.org/schemas/sitemap/0.9">
{% for path in urls %}
<url>
  <loc>{{ abs_url(path)|e }}</loc>
  {%~ if path matches '/mage|warrior|bounty-hunter/' %}
  <changefreq>hourly</changefreq>
  <priority>1.0</priority>
  {%~ else %}
  <changefreq>weekly</changefreq>
  {%~ endif %}
</url>
{% endfor %}
</urlset>
{% endapply %}